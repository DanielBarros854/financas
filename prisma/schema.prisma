generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  /// @TypeGraphQL.omit(output: true, input: true)
  password String

  updated_at DateTime @default(now()) @updatedAt
  created_at DateTime @default(now())

  @@map("users")
}

model Expense {
  id                Int      @id @default(autoincrement())
  name              String
  cost              Float
  automatic_billing Boolean
  collection_day    DateTime
  essential         Boolean

  updated_at DateTime @default(now()) @updatedAt
  created_at DateTime @default(now())

  @@map("expenses")
}

model Investment {
  id            Int      @id @default(autoincrement())
  name          String
  amount        Int
  share_value   Float
  purchase_date DateTime

  updated_at DateTime @default(now()) @updatedAt
  created_at DateTime @default(now())

  @@map("investments")
}

model Earning {
  id           Int      @id @default(autoincrement())
  name         String
  amount       Int
  earning      Float
  earning_date DateTime

  updated_at DateTime @default(now()) @updatedAt
  created_at DateTime @default(now())

  @@map("earnings")
}
